<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/pageFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:text="Food"
        android:textAppearance="Bold"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    <LinearLayout
        android:id="@+id/breakfastB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="35px"
        app:layout_constraintTop_toBottomOf="@+id/pageFood"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/breakfastImage"
            android:layout_width="250px"
            android:layout_height="250px"
            android:padding="8px"
            android:src="@color/cardview_dark_background"
            />

        <TextView
            android:id="@+id/breakfastText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="48px"
            android:text="Filler Text"
            android:textColor="#000"
            android:textSize="18sp"

            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lunchB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        app:layout_constraintTop_toBottomOf="@+id/breakfastB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/lunchImage"
            android:layout_width="250px"
            android:layout_height="250px"
            android:padding="8px"
            android:src="@color/cardview_dark_background"
            />

        <TextView
            android:id="@+id/lunchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="48px"
            android:text="Filler Text"
            android:textColor="#000"
            android:textSize="18sp"

            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dinnerB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        app:layout_constraintTop_toBottomOf="@+id/lunchB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/dinnerImage"
            android:layout_width="250px"
            android:layout_height="250px"
            android:padding="8px"
            android:src="@color/cardview_dark_background"
            />

        <TextView
            android:id="@+id/dinnerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="48px"
            android:text="Filler Text"
            android:textColor="#000"
            android:textSize="18sp"

            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/snacksB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        app:layout_constraintTop_toBottomOf="@+id/dinnerB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/snacksImage"
            android:layout_width="250px"
            android:layout_height="250px"
            android:padding="8px"
            android:src="@color/cardview_dark_background"
            />

        <TextView
            android:id="@+id/snacksText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="48px"
            android:text="Filler Text"
            android:textColor="#000"
            android:textSize="18sp"

            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>